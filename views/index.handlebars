<h1>Burgers!</h1>

<img src="assets/img/hamburger.jpg" style="height: 225px; width: 225px;" alt="hamburger" />

<h2>Ready to eat</h2>

<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
        <li value={{this.id}}>
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devour" value="true">
                    <button type="submit">DEVOUR!</button>
                </form>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Meal history</h2>

<ul>
    {{#each burgers}}
        {{#if this.devoured}}
            <li>
                {{this.burger_name}}
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-update-form" action="/" method="POST">
    <div class="form-group">
        <label for="burger">Burger Name:</label><br>
        <input type="text" id="burger" name="name">
    </div>
    
    <button type="submit">Add Burger</button>
</form>
